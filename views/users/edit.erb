<h2>Edit User</h2>

<form action="/users/<%= @user[:id] %>" method="post">
  <input type="hidden" name="_method" value="put">

  <div class="form-group">
    <label>Name:
      <input type="text" name="user[name]" value="<%= @user[:name] %>">
    </label>
  </div>

  <div class="form-group">
    <label>Email:
      <input type="text" name="user[email]" value="<%= @user[:email] %>">
    </label>
  </div>

  <div class="form-group">
    <label>Address:
      <input type="text" name="user[address]" value="<%= @user[:address] %>">
    </label>
  </div>

  <div class="form-group">
    <label>Password:
      <input type="text" name="user[password]" value="<%= @user[:password] %>">
    </label>
  </div>

  <div class="form-group">
    <label>Number:
      <input type="text" name="user[cc_number]" value="<%= @user[:cc_number] %>">
    </label>
  </div>

  <div class="form-group">
    <label>Date Joined:
      <input type="text" name="user[date_joined]" value="<%= @user[:date_joined] %>">
    </label>
  </div>

  <input type="submit" value="submit">
</form>
